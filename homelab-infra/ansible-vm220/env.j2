# VM 210 Media Stack Environment Variables
# Generated by Ansible - DO NOT COMMIT TO GIT

# ===========================================================================
# VPN CONFIGURATION (REQUIRED - FILL THIS OUT!)
# ===========================================================================
# Get your VPN credentials from your provider's dashboard

VPN_SERVICE_PROVIDER=nordvpn
VPN_TYPE=wireguard

# NordVPN WireGuard - Get from: https://my.nordaccount.com/dashboard/nordvpn/
WIREGUARD_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
WIREGUARD_ADDRESSES=YOUR_VPN_IP_HERE/32

# Server location
SERVER_CITIES=Amsterdam

# ===========================================================================
# IMMICH DATABASE PASSWORD
# ===========================================================================
# Generate secure password: openssl rand -base64 32

IMMICH_DB_PASSWORD={{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}

# ===========================================================================
# NOTES
# ===========================================================================
